<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="well">
        <p>Welcome <%= @email %>!</p>
        
        <p>You can confirm your account email through the link below:</p>
        
        <p><%= link_to 'Confirm my account', 
        confirmation_url(@resource, confirmation_token: @token), 
        class: 'btn btn-success' %></p>
      </div>
    </div>
  </div>
</div>